{
  "name": "Senscritique Supercharge",
  "version": "0.1",
  "description": "Add extra features to Senscritique.com",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://www.amazon.fr/*"
  ],
  "browser_action": {
    "default_icon": "images/get_started16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.senscritique.com/livre/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
